]},{"id":"G1SSMAT02654","subject":"/pdf/e3c/G1SSMAT02654.pdf","corrections":["https://www.annales2maths.com/tag/sujet-02654-58/"]},{"id":"G1SSMAT02655","subject":"/pdf/e3c/G1SSMAT02655.pdf","corrections":["https://www.annales2maths.com/tag/sujet-02655-59/"]},{"id":"G1SSMAT02656","subject":"/pdf/e3c/G1SSMAT02656.pdf","corrections":["https://www.annales2maths.com/tag/sujet-02656-60/"]},{"id":"G1SSMAT02657","subject":"/pdf/e3c/G1SSMAT02657.pdf","corrections":["https://www.annales2maths.com/tag/sujet-02657-61/"]},{"id":"G1SSMAT02658","subject":"/pdf/e3c/G1SSMAT02658.pdf","corrections":["https://www.annales2maths.com/tag/sujet-02658-62/","http://maths-master.fr/sujet-02658-spe-maths-premiere/"]},{"id":"G1SSMAT02659","subject":"/pdf/e3c/G1SSMAT02659.pdf","corrections":["https://www.annales2maths.com/tag/sujet-02659-63/","http://maths-master.fr/sujet-02659-spe-maths-premiere/"]},{"id":"G1SSMAT02660","subject":"/pdf/e3c/G1SSMAT02660.pdf","corrections":["https://www.annales2maths.com/tag/sujet-02660-64/"]},{"id":"G1SSMAT02661","subject":"/pdf/e3c/G1SSMAT02661.pdf","corrections":["https://www.annales2maths.com/tag/sujet-02661-65/","http://maths-master.fr/sujet-02661-e3c-spe-maths-premiere/"]}]}